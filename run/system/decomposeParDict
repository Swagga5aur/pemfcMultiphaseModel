{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      decomposeParDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

numberOfSubdomains $NPROCS;		//numberOfSubdomains= nx*ny*nz

preserveFaceZones (iFaces);

method          simple;	

simpleCoeffs
{
    n               (1 $NPROCS 1);
    delta           0.001;
}

hierarchicalCoeffs
{
    n               (1 1 1);
    delta           0.001;
    order           xyz;
}

